<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4867AA"
    android:orientation="vertical"
    tools:context="com.example.new1223.facebooklogin.LoginActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />


    <EditText
        android:id="@+id/edit_text_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_textview"
        android:hint="Email or Mobile "
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/logo"
        android:layout_alignLeft="@+id/edit_text_password"
        android:layout_alignStart="@+id/edit_text_password"
        android:layout_alignRight="@+id/edit_text_password"
        android:layout_alignEnd="@+id/edit_text_password" />

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner_textview"
        android:hint="Password "
        android:inputType="textPassword"
        android:layout_below="@+id/edit_text_user_name"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />


    <Button
        android:id="@+id/button_login"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:background="@drawable/round_corner"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="210dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/edit_text_password"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Forgot Password?"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="#4867AA"
        android:text="Sign Up for Facebook"
        android:textColor="#ffffff" />


</RelativeLayout>
